{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/next",
      "config": {
        "installCommand": "npm install --force && node scripts/disable-eslint.js",
        "buildCommand": "DISABLE_ESLINT_PLUGIN=true NEXT_DISABLE_ESLINT=1 NODE_OPTIONS=--max_old_space_size=4096 npm run build",
        "zeroConfig": true
      }
    }
  ],
  "github": {
    "enabled": true,
    "silent": false,
    "autoAlias": true
  },
  "installCommand": "npm install --force",
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "env": {
    "DISABLE_ESLINT_PLUGIN": "true",
    "NEXT_DISABLE_ESLINT": "1",
    "ESLINT_NO_DEV_ERRORS": "true",
    "NEXT_TELEMETRY_DISABLED": "1"
  }
} 